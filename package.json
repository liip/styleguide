{
  "name": "@liip/styleguide",
  "version": "3.3.1",
  "description": "Liip.ch official web styleguide",
  "keywords": [
    "styleguide",
    "toolkit",
    "fractal"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/liip/styleguide.git"
  },
  "author": "Liip AG",
  "license": "MIT",
  "homepage": "http://styleguide.liip.ch",
  "scripts": {
    "start": "NODE_ENV=development concurrently 'node ./server.js' 'webpack-dev-server --hot'",
    "build": "NODE_ENV=production concurrently 'npm run build:fractal' 'npm run build:webpack' && cp -R dist/* build/",
    "build:webpack": "NODE_ENV=production webpack",
    "build:fractal": "NODE_ENV=production fractal build",
    "prettier": "prettier --check assets/scripts/**/*.js",
    "prettier:fix": "prettier --write assets/scripts/**/*.js",
    "eslint": "eslint assets/scripts",
    "eslint:fix": "eslint --fix assets/scripts",
    "validate": "npm run prettier && npm run eslint",
    "format": "npm run prettier:fix && npm run eslint:fix",
    "deploy": "rsync -avzP --delete --exclude='.*' build/ liip-styleguide:/var/www/html/styleguide.liip.ch/",
    "test": "npm run validate && npm run build:webpack",
    "release": "release-it"
  },
  "main": "dist/common.js",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@frctl/fractal": "^1.1.7",
    "@frctl/nunjucks": "^2.0.1",
    "@release-it/conventional-changelog": "^1.1.0",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^4.1.1",
    "conventional-changelog-cli": "^2.0.23",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-rawbot": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "file-loader": "^4.2.0",
    "glob": "^7.1.4",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "release-it": "^12.3.5",
    "sass-loader": "^7.2.0",
    "style-loader": "^1.0.0",
    "svg-sprite-loader": "^4.1.6",
    "svgo": "^1.3.0",
    "svgo-loader": "^2.2.1",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0"
  },
  "dependencies": {
    "expanding-textareas": "^1.0.2",
    "kanbasu": "^2.5.0",
    "prismjs": "^1.17.1"
  },
  "files": [
    "assets/*",
    "!assets/images/*",
    "dist/*",
    "!.DS_Store"
  ]
}
